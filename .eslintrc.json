{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },

    "extends": "eslint:recommended",

    "parserOptions": {
        "sourceType": "module"
    },

    "plugins": [
        "flowtype"
    ],

    "ecmaFeatures": {
        "modules": true
    },

    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}